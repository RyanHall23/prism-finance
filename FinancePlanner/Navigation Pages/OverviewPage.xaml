<Page x:Class="FinancePlanner.Navigation_Pages.OverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FinancePlanner.Navigation_Pages"
      mc:Ignorable="d"
      d:DesignHeight="1019" d:DesignWidth="1727" Language="en-GB"
      Title="OverviewPage">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
    </Grid.RowDefinitions>
    <Label x:Name="lblOverview" Content="Overview" HorizontalAlignment="Left" Margin="10,10,0,0"
           VerticalAlignment="Top" FontSize="24" />
    <Label x:Name="lblDateTime" Content="" HorizontalAlignment="Left" Margin="1600,985,0,0" VerticalAlignment="Top" />

    <Label x:Name="lblMargin" Content="Income Margin: " HorizontalAlignment="Left" Margin="10,95,0,0"
           VerticalAlignment="Top" />
    <Label x:Name="lblMarginAmt" Content="{Binding Amount}" ContentStringFormat="C" HorizontalAlignment="Left"
           Margin="100,95,0,0" VerticalAlignment="Top" />

    <Label x:Name="lblIn" Content="Amount In: " HorizontalAlignment="Left" Margin="210,95,0,0" VerticalAlignment="Top" />
    <Label x:Name="lblInAmt" Content="{Binding Amount}" ContentStringFormat="C" HorizontalAlignment="Left"
           Margin="300,95,0,0" VerticalAlignment="Top" />

    <Label x:Name="lblOut" Content="Amount Out: " HorizontalAlignment="Left" Margin="410,95,0,0"
           VerticalAlignment="Top" />
    <Label x:Name="lblOutAmt" Content="{Binding Amount}" ContentStringFormat="C" HorizontalAlignment="Left"
           Margin="500,95,0,0" VerticalAlignment="Top" />

    <Label x:Name="lblOutExpenses" Content="Expenses Out: " HorizontalAlignment="Left" Margin="410,190,0,0"
           VerticalAlignment="Top" />
    <Label x:Name="lblExpensesAmt" Content="{Binding Amount}" ContentStringFormat="C" HorizontalAlignment="Left"
           Margin="500,190,0,0" VerticalAlignment="Top" />

    <Label x:Name="lblSavings" Content="Savings Out: " HorizontalAlignment="Left" Margin="410,240,0,0"
           VerticalAlignment="Top" />
    <Label x:Name="lblSavingsAmt" Content="{Binding Amount}" ContentStringFormat="C" HorizontalAlignment="Left"
           Margin="500,240,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.469,0.538" />

    <Label x:Name="lblPension" Content="Pension Out: " HorizontalAlignment="Left" Margin="410,290,0,0"
           VerticalAlignment="Top" />
    <Label x:Name="lblPensionAmt" Content="{Binding Amount}" ContentStringFormat="C" HorizontalAlignment="Left"
           Margin="500,290,0,0" VerticalAlignment="Top" />
  </Grid>
</Page>